{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "module": "commonjs",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "stripInternal": true
  },
  "files": [
    "src/core.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "angularCompilerOptions": {
    "genDir": "dist",
    "debug": true
  }
}
